                <input type="text" name="name" class="form-control" id="name" aria-describedby="emailHelp">
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label for="age" class="form-label">Yoshi</label>
                <input type="number" name="age" class="form-control" id="age" aria-describedby="emailHelp">
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label for="bdate" class="form-label">Tug'ilgan sanasi</label>
                <input type="date" name="bdate" class="form-control" id="bdate" aria-describedby="emailHelp">
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label class="form-label">Tu'gilgan joyi</label>
                <select name="bplace" class="form-select" aria-label="Default select example">
