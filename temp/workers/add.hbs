                    <option value="Surxondaryo vil">Surxondaryo vil</option>
                </select>
            </div>
        </div>
        <div class="mb-3 d-flex">
            <div class="form-check">
                <input name="skills" class="form-check-input" type="checkbox" value="JavaScript" id="js">
                <label class="form-check-label" for="js">
                    JavaScript
                </label>
            </div>
            <div class="form-check ms-2">
                <input name="skills" class="form-check-input" type="checkbox" value="Java" id="java">
                <label class="form-check-label" for="java">
                    Java
                </label>
            </div>
            <div class="form-check ms-2">
                <input name="skills" class="form-check-input" type="checkbox" value="Python" id="python">
                <label class="form-check-label" for="python">
                    Python
                </label>
            </div>
            <div class="form-check ms-2">
                <input name="skills" class="form-check-input" type="checkbox" value="PHP" id="php">
                <label class="form-check-label" for="php">
                    PHP
                </label>
            </div>
        </div>
    </div>
