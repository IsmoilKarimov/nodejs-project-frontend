<div class="d-flex mb-2 justify-content-between align-items-center">
    <h1>Yangiliklar</h1>
    <a href="/news/create" class="btn btn-success">Yangi yangilik qo'shish</a>
</div>

<div class="row">
    {{#each news}}
    <div class="col-md-6">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col-7 p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary">{{category}}</strong>
                <h3 class="mb-0">Muhim yangiliklar</h3>
                <div class="mb-1 text-muted">{{date}}</div>
                <p class="card-text mb-auto">{{title}}</p>
                <a href="/news/{{_id}}" class="stretched-link">Batafsil</a>
            </div>
            <div class="col-5 d-none d-lg-block">
                <img src="{{photo}}" alt="" class="img-fluid">
                </svg>

            </div>
        </div>
    </div>
    {{/each}}
</div>